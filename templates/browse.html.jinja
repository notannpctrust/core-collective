<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <h1 class="text-3xl font-bold underline">
      You WILL browse my products.
    </h1>
  
  
  <main class = "grid grid - cols-3 gap-3 man-w-4xl mx-auto p-6 mb-5">
    {% for x in products %}
      <a href="/product/{{ x [ 'ID' ] }}" class="grid border bg-white p-2 gap-2">
      
        <img class="h-25 mx-auto" src=" {{ x ['Image'] }}">

        <div>{{x["Name"]}}</div>

        <div class ="text-right font-bold text-sm">${{x["Price"]}}</div>
      
      
      </a>

    {% endfor %}

      
    
  </main>
  
  </body>
</html>




