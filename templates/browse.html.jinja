<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>

  
      <header class="bg-white shadow sticky top-0 z-50">
      <nav class="max-w-6xl mx-auto flex items-center justify-between p-4">
        <div class="text-2xl font-bold text-indigo-600">Core Collective</div>
        <ul class="flex space-x-6">
          <li><a href="/" class="hover:text-indigo-600">Home</a></li>
          <li><a href="/browse" class="hover:text-indigo-600">Browse</a></li>
          <li><a href="/cart" class="hover:text-indigo-600">Cart</a></li>
          <li><a href="/login" class="hover:text-indigo-600">Login</a></li>
          <li><a href="/signup" class="hover:text-indigo-600">Register</a></li>
        </ul>
      </nav>
    </header>




  <body>
    <h1 class="text-3xl font-bold underline">
      Here are all the products!
    </h1>
  
  
  <main class = "grid grid - cols-3 gap-3 man-w-4xl mx-auto p-6 mb-5">
    {% for x in products %}
      <a href="/product/{{ x [ 'ID' ] }}" class="grid border bg-white p-2 gap-2">
      
        <img class="h-25 mx-auto" src=" {{ x ['Image'] }}">

        <div>{{x["Name"]}}</div>

        <div class ="text-right font-bold text-sm">${{x["Price"]}}</div>
      
      
      </a>

    {% endfor %}

      
    
  </main>
  
  </body>
</html>




