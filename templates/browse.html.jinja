<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Browse Products | Core Collective</title>
  </head>

  <body class="bg-blue-50 min-h-screen text-gray-800 font-sans">

    
    {% include 'navbar.html.jinja' %}

    
    <section class="max-w-6xl mx-auto px-6 py-10">
      <h1 class="text-4xl font-bold text-blue-700 mb-2">
        Browse Products
      </h1>
      <p class="text-gray-600">
        Reasonable prices no strings attached
      </p>
    </section>

    
    <main class="max-w-6xl mx-auto px-6 pb-16">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for x in products %}
          <a
            href="/product/{{ x['ID'] }}"
            class="bg-white rounded-2xl shadow hover:shadow-xl transition p-4 flex flex-col gap-4 group"
          >

            <div class="bg-blue-50 rounded-xl p-4 flex justify-center">
              <img
                src="{{ x['Image'] }}"
                alt="{{ x['Name'] }}"
                class="h-40 object-contain group-hover:scale-105 transition"
              >
            </div>

            <div class="flex-1">
              <h3 class="font-semibold text-lg text-gray-800">
                {{ x["Name"] }}
              </h3>
            </div>

            <div class="text-right text-blue-600 font-bold text-lg">
              ${{ x["Price"] }}
            </div>

          </a>
        {% endfor %}
      </div>
    </main>

  </body>
</html>
