<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Christopher's Core Collective</title>
  </head>


  <main class="max-w-4xl mx-auto p-6 mb-5">
        <h1>Your Cart</h1>


        {% for x in cart%}
            <div class="cart-row">
                <img src ="{{x['Image']}}">
                <div>{{x['Name']}}</div>
                <div>
                    <form method ="post" action="/cart/{{ x['ProductID'] }}/update_qty">
                    <input class="w-full" name ="qty" type="number" value="{{ x['Quantity']}}">


                    </form>
                    
                    
                   
                </div>
                <div>F{{x['Price']}}</div>
                <div>F{{ x['Price'] * x['Quantity'] }}</div>
            
            
            
                
                
                
                
            </div>
            
            
            
        {% endfor %}
    
    </main>