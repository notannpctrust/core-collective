<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Order Status | Core Collective</title>
  </head>

  {% include 'navbar.html.jinja' %}

  <body class="bg-blue-50 min-h-screen font-sans text-gray-800">

    <main class="max-w-6xl mx-auto px-6 py-16">

      {% if order|length > 0 %}
        <h1 class="text-4xl font-bold text-blue-700 mb-8">Your Orders</h1>

        <div class="space-y-6">
          {% for item in order %}
            <div class="bg-white rounded-2xl shadow-lg p-6 hover:shadow-xl transition">
              
              <div class="flex flex-col md:flex-row justify-between items-start md:items-center border-b border-blue-100 pb-4 mb-4">
                <div>
                  <p class="font-semibold text-lg text-gray-900">Order #{{ item['ID'] }}</p>
                  <p class="text-sm text-gray-500">Placed on {{ item["Timestamp"].strftime("%b %d, %Y") }}</p>
                </div>
                <div class="text-right mt-4 md:mt-0">
                  <p class="font-bold text-blue-600 text-lg">Total: ${{ item["Total"] }}</p>
                  <p class="text-sm text-gray-500">Items: {{ item["Quantity"] }}</p>
                </div>
              </div>

            </div>
          {% endfor %}
        </div>

      {% else %}

        <div class="flex flex-col items-center justify-center mt-24 text-center">
          <h2 class="text-4xl font-bold text-blue-700 mb-4">No Orders Yet</h2>
          <p class="text-gray-500 mb-6">
            When you place an order, it will appear here.
          </p>

          <img src="/static/empty_cart.gif" class="w-64 mb-6" alt="No Orders">

          <a href="/browse"
             class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg shadow transition font-semibold">
            Start Shopping
          </a>
        </div>

      {% endif %}

    </main>

  </body>
</html>
